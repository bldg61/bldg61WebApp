<div class="card">
  <div class="card-content">
    <span class="card-title">Tools
      <a
        class="btn-floating btn-large waves-effect waves-light pink right modal-trigger"
        id="addTool"
        href="#newToolForm"
      >
        <i class="material-icons">add</i>
      </a>
    </span>

    {{#if tools.length}}
      <div class="row">
        <div class="col s12">
          <table id="toolsAvailable" class="responsive-table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Total Available For Checkout</th>
                <th>Categories</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              {{#each tools}}
              <tr>
                <td>{{name}}</td>
                <td>{{totalForCheckout}}</td>
                <td>
                  {{#each categories}}
                  {{name}}
                  {{/each}}
                </td>
                <td class="right">
                  <a
                    class="waves-effect waves-light btn modal-trigger"
                    href="#editToolForm-{{id}}"
                    id="editTool-{{id}}"
                  >
                    <i class="material-icons">edit</i>
                  </a>
                  <a
                    class="waves-effect waves-light btn modal-trigger"
                    href="#deleteToolAlert-{{id}}"
                    id="deleteTool-{{id}}"
                  >
                    <i class="material-icons">delete</i>
                  </a>
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    {{/if}}
  </div>
  {{> tools/new}}
  {{#each tools}}
    {{> tools/edit errors=../errors allCategories=../categories}}
    {{> tools/delete}}
  {{/each}}
</div>
